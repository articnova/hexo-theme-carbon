meta(charset='UTF-8')
if config.author
  meta(name='author', content=config.author)
if config.description
  meta(name='description', content=config.description)
meta(name='viewport', content='width=device-width, initial-scale=1.0')
title
  if page.title
    = page.title
  else
    = config.title
link(rel='stylesheet', type='text/css', href=theme.cdn.normalize + '/normalize/3.0.3/normalize.min.css')
link(rel='stylesheet', type='text/css', href=theme.cdn.carbon + '/css/carbon.css')
link(rel='stylesheet', type='text/css', href=theme.cdn.carbon + '/font-awesome/css/font-awesome.min.css')
link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Open+Sans|Roboto+Condensed|Martel')
if theme.favicon
  link(rel="icon", href=theme.favicon)
include scripts
